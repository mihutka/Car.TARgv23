@model IEnumerable<Car.TARgv23.Models.CarIndexViewModelcs>

@{
    int rowNumber = 1;

}

<div>
    <a asp-action="create" asp-controller="Car" type="submit" class="btn btn-primary">Create</a>
</div>

<div class="h1">
    Car
</div>

<form method="post">
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Nr</th>
                <th scope="col">Brand</th>
                <th scope="col">Model</th>
                <th scope="col">Number</th>
                <th scope="col">Mileage</th>
                <th scope="col">TechnicalInspection</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var car in Model)
            {
                <tr>
                    <td>@rowNumber</td>
                    <td>@car.Brand</td>
                    <td>@car.Model</td>
                    <td>@car.Number</td>
                    <td>@car.Mileage</td>
                    <td>@car.TechnicalInspection</td>
                    <td>
                        <a asp-action="details" asp-controller="Car" asp-route-id="@car.Id" class="btn btn-info">Details</a>
                        <a asp-action="update" asp-controller="Car" asp-route-id="@car.Id" class="btn btn-primary">Update</a>
                        <a asp-action="delete" asp-controller="Car" asp-route-id="@car.Id" class="btn btn-outline-danger">Delete</a>
                    </td>
                </tr>

                rowNumber++;
            }
        </tbody>
    </table>
</form>
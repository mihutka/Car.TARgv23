@model Car.TARgv23.Models.CarDetailsViewModel

<h1>Details</h1>

<div>
    <h4>Car</h4>
    <hr />
    <dl class="row">
        <div class="form-group row">
            <label asp-for="Id" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.Id)
        </div>

        <div class="form-group row">
            <label asp-for="Brand" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.Brand)
        </div>

        <div class="form-group row">
            <label asp-for="Model" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.Model)
        </div>

        <div class="form-group row">
            <label asp-for="Number" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.Number)
        </div>

        <div class="form-group row">
            <label asp-for="Mileage" class="col-sm-2 col-form-label"></label>
            @Model.Mileage km
        </div>


        <div class="form-group row">
            <label asp-for="TechnicalInspection" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.TechnicalInspection)
        </div>
       


    </dl>
    <a asp-action="Index" asp-controller="Car" class="btn btn-danger">Back</a>
</div>


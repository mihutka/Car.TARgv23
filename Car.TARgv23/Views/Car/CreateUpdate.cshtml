@model Car.TARgv23.Models.CarCreateUpdateViewModel

@if (Model.Id.HasValue)
{
    <h1>Car </h1>
}
else
{
    <h1>Car</h1>
}

<div>
    <form method="post" enctype="multipart/form-data">
        <input asp-for="Id" type="hidden" />
        <input asp-for="CreatedAt" type="hidden" />
        <input asp-for="ModifiedAt" type="hidden" />

        <div class="form-group row">
            <label asp-for="Brand" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Brand" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Model" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Model" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Number" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Number" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Mileage" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Mileage" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="TechnicalInspection" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="TechnicalInspection" class="form-control" />
            </div>
        </div>


        <hr />


        @if (Model.Id.HasValue)
        {
            <input asp-action="update" asp-controller="Car" type="submit" class="btn btn-primary" value="Update" />
        }
        else
        {
            <input asp-action="create" asp-controller="Car" type="submit" class="btn btn-primary" value="Create" />
        }
        <input asp-action="index" asp-controller="Car" type="submit" class="btn btn-outline-secondary" value="Back" />
    </form>
</div>

